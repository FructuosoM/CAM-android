<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/homefrag"
    android:padding="12dp"
    tools:context=".HomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cuestionarios disponibles"
            android:textSize="30sp"
            android:textAlignment="center"
            android:padding="16dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnCuestionarioUno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/number1"
                android:contentDescription="Cuestionario 1"
                android:layout_weight="3"
                android:padding="20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cuestionario de Precios de Productos Básicos"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_weight="1"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/number2"
                android:contentDescription="Cuestionario 2"
                android:layout_weight="3"
                android:padding="20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cuestionario de Ingreso - Gasto de los hogares (próximamente)"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_weight="1"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/number3"
                android:contentDescription="Cuestionario 3"
                android:layout_weight="3"
                android:padding="20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Encuesta de Condiciones de Ocupación en México (próximamente)"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_weight="1"/>

        </LinearLayout>
        <Button
            android:id="@+id/btnInicioRegistro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="INICIAR SESIÓN / REGISTRARSE"
            android:paddingTop="12dp"
            android:layout_marginTop="30dp"/>
    </LinearLayout>

</RelativeLayout>